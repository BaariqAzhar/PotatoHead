<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sebastiaan.potatohead.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/mr_potato_head"
        android:textAlignment="center"
        android:textSize="30sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="277dp">

        <ImageView
            android:id="@+id/bodyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/armsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/arms" />

        <ImageView
            android:id="@+id/eyesView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/eyes" />

        <ImageView
            android:id="@+id/earsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ears" />

        <ImageView
            android:id="@+id/eyebrowsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/eyebrows" />

        <ImageView
            android:id="@+id/glassesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/glasses" />

        <ImageView
            android:id="@+id/hatView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hat" />

        <ImageView
            android:id="@+id/mouthView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mouth" />

        <ImageView
            android:id="@+id/noseView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nose" />

        <ImageView
            android:id="@+id/shoesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/shoes" />

        <ImageView
            android:id="@+id/mustacheView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mustache" />

    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="50dp">

        <CheckBox
            android:id="@+id/hat_checkbox"
            android:text="Hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:checked="true"
            android:onClick="onClick"/>

        <CheckBox
            android:id="@+id/eyes_checkbox"
            android:text="Eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:checked="true"
            android:onClick="onClick"/>

        <CheckBox
            android:id="@+id/nose_checkbox"
            android:text="Nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:checked="true"
            android:onClick="onClick"/>
        <CheckBox
            android:id="@+id/glasses_checkbox"
            android:text="Glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:checked="true"
            android:onClick="onClick"/>
        <CheckBox
            android:id="@+id/ears_checkbox"
            android:text="Ears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:checked="true"
            android:onClick="onClick"/>
        <CheckBox
            android:id="@+id/arms_checkbox"
            android:text="Arms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:checked="true"
            android:onClick="onClick"/>
        <CheckBox
            android:id="@+id/eyebrows_checkbox"
            android:text="Eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:checked="true"
            android:onClick="onClick"/>
        <CheckBox
            android:id="@+id/mouth_checkbox"
            android:text="Mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:checked="true"
            android:onClick="onClick"/>
        <CheckBox
            android:id="@+id/mustache_checkbox"
            android:text="Mustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:checked="true"
            android:onClick="onClick"/>
        <CheckBox
            android:id="@+id/shoes_checkbox"
            android:text="Shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:checked="true"
            android:onClick="onClick"/>

    </GridLayout>


</LinearLayout>
